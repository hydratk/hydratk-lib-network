Test-Scenario-1:
  Id: ts_01
  Path: hydratk/lib/data/xml/01_methods_ut.jedi
  Name: ts_load_xsd
  Desc: Test method load_xsd
  Author: Petr Rasek <bowman@hydratk.org>
  Version: 0.1
  
  Pre-Req: |
    from hydratk.lib.data.xml import XMLValidate
    from lxml.etree import XMLSyntaxError
  
  Test-Case-1:
    Id: tc_01
    Name: tc_load_xsd
    Desc: Load XSD from string
    
    Test-Condition-1: 
      Id: tco_01
      Name: tco_valid
      Desc: Valid XSD
      
      Test: |
        path = '/var/local/hydratk/testenv/crm.xsd'
        with open(path, 'r') as f:
            doc = f.read()
            
        c = XMLValidate()
        c.load_xsd(doc)
        res = c._xml_schema
      
      Validate: |
        this.test_result = str(res)
        assert (res != None), '_xml_schema is not empty'
        
    Test-Condition-2: 
      Id: tco_02
      Name: tco_invalid
      Desc: Invalid XSD
      
      Test: |
        try:
            c._xml_schema = None
            c.load_xsd('xx')
            ex = False
        except XMLSyntaxError:
            ex = True
      
      Validate: |
        this.test_result = ex
        assert (ex), 'load_xsd raises XMLSyntaxError'   
        
